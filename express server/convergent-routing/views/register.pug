doctype html
html
  head
    title Register Page
    style.
      body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f9f9f9;
      }
      .container {
        width: 400px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
      }
      h2 {
        text-align: center;
        color: #cc0000;
        margin-bottom: 20px;
      }
      label {
        display: block;
        margin-top: 10px;
        font-weight: bold;
      }
      input {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      .actions {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
      }
      button, a.btn {
        padding: 8px 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        text-decoration: none;
      }
      button {
        background-color: #003366;
        color: white;
      }
      button:hover {
        background-color: #00509e;
      }
      a.btn {
        background-color: #ccc;
        color: black;
      }
      a.btn:hover {
        background-color: #aaa;
      }
  body
    .container
      h2 New User Account Creation
      form(action="/register" method="post")
        label(for="username") Username
        input(type="text" name="username" required)

        label(for="email") Email Id
        input(type="email" name="email" required)

        label(for="password") Password
        input(type="password" name="password" required)

        .actions
          button(type="submit") Register
          a.btn(href="/welcome") Cancel
